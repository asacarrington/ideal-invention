@model Lumia_Trial.Models.SelectionDateViewModel

<h2>Select Refresh Date  @Model.TimeFrame.DayCount</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RegionId, new { htmlAttributes = new { @class = "form-control" } })
        <div class="form-group">
            @Html.LabelFor(model => model.SelectionDateId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectionDateId, new SelectList(Model.SelectionDates, "Id", "Selection", Model.SelectionDates.SingleOrDefault(m => m.Id == Model.SelectionDateId)), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectionDateId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default btn-primary" />
            </div>
        </div>
    </div>
}
